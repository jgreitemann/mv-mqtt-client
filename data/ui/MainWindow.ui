<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk" version="4.0"/>
	<object id="window" class="GtkApplicationWindow">
		<property name="visible">1</property>
		<property name="default-width">800</property>
		<property name="default-height">600</property>
		<child type="titlebar">
			<object class="GtkHeaderBar">
				<child type="title">
					<object class="GtkStackSwitcher">
						<property name="stack">content-stack</property>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="spacing">6</property>
						<child>
							<object class="GtkStack" id="actions-stack">
								<child>
									<object class="GtkStackPage">
										<property name="name">preoperational-pane</property>
										<property name="title" translatable="yes">Preoperational</property>
										<property name="child">
											<object class="GtkBox">
												<child>
													<object class="GtkButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Select automatic mode</property>
														<property name="action-name">app.select_automatic_mode</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">select-mode-automatic-symbolic</property>
															</object>
														</child>
														<style>
															<class name="suggested-action"/>
														</style>
													</object>
												</child>
												<child>
													<object class="GtkButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Halt</property>
														<property name="action-name">app.halt</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">halt-symbolic</property>
															</object>
														</child>
													</object>
												</child>
												<style>
													<class name="linked"/>
												</style>
											</object>
										</property>
									</object>
								</child>
								<child>
									<object class="GtkStackPage">
										<property name="name">halted-pane</property>
										<property name="title" translatable="yes">Halted</property>
										<property name="child">
											<object class="GtkButton">
												<property name="tooltip-text" translatable="yes">Reset to Preoperational</property>
												<property name="action-name">app.reset</property>
												<child>
													<object class="GtkBox">
														<property name="halign">center</property>
														<property name="spacing">4</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">system-log-out-symbolic</property>
															</object>
														</child>
														<child>
															<object class="GtkLabel">
																<property name="label" translatable="yes">Reset</property>
															</object>
														</child>
													</object>
												</child>
												<style>
													<class name="suggested-action"/>
												</style>
											</object>
										</property>
									</object>
								</child>
								<child>
									<object class="GtkStackPage">
										<property name="name">error-pane</property>
										<property name="title" translatable="yes">Error</property>
										<property name="child">
											<object class="GtkBox">
												<child>
													<object class="GtkButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Reset to Preoperational</property>
														<property name="action-name">app.reset</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">system-log-out-symbolic</property>
															</object>
														</child>
														<style>
															<class name="destructive-action"/>
														</style>
													</object>
												</child>
												<child>
													<object class="GtkButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Halt</property>
														<property name="action-name">app.halt</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">halt-symbolic</property>
															</object>
														</child>
														<style>
															<class name="destructive-action"/>
														</style>
													</object>
												</child>
												<style>
													<class name="linked"/>
												</style>
											</object>
										</property>
									</object>
								</child>
								<child>
									<object class="GtkStackPage">
										<property name="name">initialized-pane</property>
										<property name="title" translatable="yes">Initialized</property>
										<property name="child">
											<object class="GtkBox">
												<child>
													<object class="GtkMenuButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Choose a recipe to prepare</property>
														<property name="popover">recipes-popover</property>
														<style>
															<class name="suggested-action"/>
														</style>
														<child>
															<placeholder/>
														</child>
													</object>
												</child>
												<child>
													<object class="GtkButton">
														<property name="tooltip-text" translatable="yes">Reset to Preoperational</property>
														<property name="action-name">app.reset</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">system-log-out-symbolic</property>
															</object>
														</child>
														<style>
															<class name="destructive-action"/>
														</style>
													</object>
												</child>
												<style>
													<class name="linked"/>
												</style>
											</object>
										</property>
									</object>
								</child>
								<child>
									<object class="GtkStackPage">
										<property name="name">ready-pane</property>
										<property name="title" translatable="yes">Ready</property>
										<property name="child">
											<object class="GtkBox">
												<child>
													<object class="GtkButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Start a single job</property>
														<property name="action-name">app.start_single_job</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">start-single-job-symbolic</property>
															</object>
														</child>
													</object>
												</child>
												<child>
													<object class="GtkButton">
														<property name="hexpand">1</property>
														<property name="tooltip-text" translatable="yes">Start a continuous execution</property>
														<property name="action-name">app.start_continuous</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">start-continuous-symbolic</property>
															</object>
														</child>
													</object>
												</child>
												<style>
													<class name="linked"/>
												</style>
											</object>
										</property>
									</object>
								</child>
								<child>
									<object class="GtkStackPage">
										<property name="name">singleexecution-pane</property>
										<property name="title" translatable="yes">SingleExecution</property>
										<property name="child">
											<object class="GtkButton">
												<property name="tooltip-text" translatable="yes">Stop the current execution</property>
												<property name="action-name">app.stop</property>
												<child>
													<object class="GtkBox">
														<property name="halign">center</property>
														<property name="spacing">4</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">media-playback-stop-symbolic</property>
															</object>
														</child>
														<child>
															<object class="GtkLabel">
																<property name="label" translatable="yes">Stop</property>
															</object>
														</child>
													</object>
												</child>
												<style>
													<class name="destructive-action"/>
												</style>
											</object>
										</property>
									</object>
								</child>
								<child>
									<object class="GtkStackPage">
										<property name="name">continuousexecution-pane</property>
										<property name="title" translatable="yes">ContinuousExecution</property>
										<property name="child">
											<object class="GtkButton">
												<property name="tooltip-text" translatable="yes">Stop the current execution</property>
												<property name="action-name">app.stop</property>
												<child>
													<object class="GtkBox">
														<property name="halign">center</property>
														<property name="spacing">4</property>
														<child>
															<object class="GtkImage">
																<property name="icon-name">media-playback-stop-symbolic</property>
															</object>
														</child>
														<child>
															<object class="GtkLabel">
																<property name="label" translatable="yes">Stop</property>
															</object>
														</child>
													</object>
												</child>
												<style>
													<class name="destructive-action"/>
												</style>
											</object>
										</property>
									</object>
								</child>
							</object>
						</child>
						<child>
							<object class="GtkMenuButton">
								<property name="popover">actions-popover</property>
								<child>
									<placeholder/>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="GtkStack" id="content-stack">
				<child>
					<object class="GtkStackPage">
						<property name="name">statemachine</property>
						<property name="title" translatable="yes">State Machine</property>
						<property name="child">
							<object class="GtkImage" id="statemachine-image">
								<property name="file">res/img/state_machine/preoperational.png</property>
							</object>
						</property>
					</object>
				</child>
				<child>
					<object class="GtkStackPage">
						<property name="name">recipes</property>
						<property name="title" translatable="yes">Recipes</property>
						<property name="child">
							<object class="GtkPaned">
								<property name="resize-start-child">0</property>
								<property name="focusable">1</property>
								<child>
									<object class="GtkStackSidebar">
										<property name="stack">recipes-stack</property>
									</object>
								</child>
								<child>
									<object class="GtkStack" id="recipes-stack"/>
								</child>
							</object>
						</property>
					</object>
				</child>
				<child>
					<object class="GtkStackPage">
						<property name="name">result</property>
						<property name="title" translatable="yes">Results</property>
						<property name="child">
							<object class="GtkPaned">
								<property name="resize-start-child">0</property>
								<property name="focusable">1</property>
								<child>
									<object class="GtkStackSidebar">
										<property name="stack">results-stack</property>
									</object>
								</child>
								<child>
									<object class="GtkStack" id="results-stack"/>
								</child>
							</object>
						</property>
					</object>
				</child>
			</object>
		</child>
	</object>
	<object class="GtkPopoverMenu" id="actions-popover">
		<property name="child">
			<object class="GtkBox">
				<property name="orientation">vertical</property>
				<property name="margin-start">10</property>
				<property name="margin-end">10</property>
				<property name="margin-top">10</property>
				<property name="margin-bottom">10</property>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="selectmodeautomatic-menu-icon">
								<property name="icon-name">select-mode-automatic-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Select Automatic Mode</property>
								<property name="action-name">app.select_automatic_mode</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="reset-menu-icon">
								<property name="icon-name">system-log-out-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Reset to Preoperational</property>
								<property name="action-name">app.reset</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="halt-menu-icon">
								<property name="icon-name">halt-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Halt</property>
								<property name="action-name">app.halt</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkSeparator"/>
				</child>
				<child>
					<object class="GtkModelButton">
						<property name="visible">True</property>
						<property name="menu-name">recipes-submenu</property>
						<property name="text" translatable="yes">Prepare Recipe…</property>
					</object>
				</child>
				<child>
					<object class="GtkModelButton">
						<property name="visible">True</property>
						<property name="text" translatable="yes">Unprepare Recipe</property>
						<property name="action-name">app.unprepare_recipe</property>
					</object>
				</child>
				<child>
					<object class="GtkSeparator"/>
				</child>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="startsinglejob-menu-icon">
								<property name="icon-name">start-single-job-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Start Single Job</property>
								<property name="action-name">app.start_single_job</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="startcontinuous-menu-icon">
								<property name="icon-name">start-continuous-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Start Continuous</property>
								<property name="action-name">app.start_continuous</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="stop-menu-icon">
								<property name="icon-name">media-playback-stop-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Stop Current Execution</property>
								<property name="action-name">app.stop</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="vexpand">1</property>
						<child>
							<object class="GtkImage" id="abort-menu-icon">
								<property name="icon-name">process-stop-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkModelButton">
								<property name="hexpand">1</property>
								<property name="visible">True</property>
								<property name="text" translatable="yes">Abort Current Execution</property>
								<property name="action-name">app.abort</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</property>
	</object>
	<object class="GtkPopoverMenu" id="recipes-popover"/>
	<object class="GtkPopoverMenu" id="recipes-submenu"/>
</interface>
